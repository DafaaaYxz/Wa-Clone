<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VibeChat - Beranda</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 h-screen flex flex-col items-center">
    <div class="w-full max-w-md bg-white h-screen flex flex-col shadow-2xl relative">
        
        <!-- Header -->
        <div class="bg-slate-900 text-white p-6 shadow-xl">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h1 class="text-2xl font-black italic text-emerald-500">VibeChat</h1>
                    <p class="text-[9px] tracking-[0.2em] text-slate-400 font-bold">PRIVATE ENCRYPTED</p>
                </div>
                <div class="flex gap-4">
                    <a href="/contacts" class="text-xl hover:scale-110 transition">üîç</a>
                    <a href="/profile/<%= me.phone %>">
                        <img src="<%= me.photo %>" class="w-10 h-10 rounded-full border-2 border-emerald-500 object-cover">
                    </a>
                </div>
            </div>
        </div>

        <!-- Chat List -->
        <div class="flex-1 overflow-y-auto">
            <% if (chatList.length === 0) { %>
                <div class="flex flex-col items-center justify-center h-full text-center p-10 grayscale opacity-50">
                    <span class="text-6xl mb-4">üí¨</span>
                    <p class="font-bold text-slate-600">Mulai chat pertama Anda!</p>
                </div>
            <% } else { %>
                <% chatList.forEach(chat => { %>
                    <a href="/chat/<%= chat.phone %>" class="flex items-center p-4 border-b border-slate-50 hover:bg-slate-50 transition active:bg-slate-100">
                        <img src="<%= chat.photo %>" class="w-14 h-14 rounded-2xl object-cover shadow-sm">
                        <div class="ml-4 flex-1 overflow-hidden">
                            <div class="flex justify-between items-center">
                                <h2 class="font-bold text-slate-800 truncate"><%= chat.name %></h2>
                                <span class="text-[10px] text-slate-400 font-mono"><%= chat.lastTime %></span>
                            </div>
                            <p class="text-sm text-slate-500 truncate mt-0.5 italic">
                                <%= chat.lastMsg %>
                            </p>
                        </div>
                    </a>
                <% }) %>
            <% } %>
        </div>

        <!-- Floating Button -->
        <a href="/contacts" class="absolute bottom-8 right-8 bg-emerald-600 text-white w-14 h-14 rounded-2xl flex items-center justify-center shadow-2xl hover:rotate-90 transition-all duration-300">
            <span class="text-3xl font-light">+</span>
        </a>
    </div>
</body>
</html>

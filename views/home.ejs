<!-- Bagian di dalam loop chatList di home.ejs -->
<% chatList.forEach(chat => { %>
    <a href="/chat/<%= chat.phone %>" class="flex items-center p-4 border-b hover:bg-gray-50 transition">
        <div class="relative">
            <img src="<%= chat.photo %>" class="w-14 h-14 rounded-full object-cover mr-4">
        </div>
        <div class="flex-1 border-b pb-2">
            <div class="flex justify-between items-center">
                <h2 class="font-bold text-gray-800 text-lg"><%= chat.name %></h2>
                <span class="text-xs text-green-500 font-bold">Baru saja</span>
            </div>
            <p class="text-sm text-gray-500 truncate w-60">
                <%= chat.lastMsg %>
            </p>
        </div>
    </a>
<% }) %>
